{% extends 'base.html.twig' %}

{% block title %}Hello QuizzController!{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ul>
                    {% for categorie in categories %}
                        <li><a class="btn btn-grad" href="{{url('show_quizz', {categorie: categorie.id})}}">{{categorie.name }}</a></li>
                    {% endfor %}
                </ul>

                <img class="logo" src="{{ asset("media/quizz.gif") }}" alt="Logo My Quizz">

            </div>
        </div>
    </div>
{% endblock %}
